@{
    var applicationName = "Silverpop Transact Tester";
}
<!DOCTYPE html>
<html>
    <head>
        <title>@applicationName</title>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/Assets/site.css" />
    </head>
    <body>
        <div class="container">
            <div class="header">
                <h1 class="text-muted">@applicationName</h1>
                <p>Enabling easy testing of Silverpop Transact messages since 2015.</p>
            </div>
            <hr />
            <div class="row">
                <div class="col-lg-12">
                    @RenderBody()
                </div>
            </div>
        </div>
        <footer>
            <div class="container">
                <p class="text-muted">
                    Built with <span class="heart">&hearts;</span>
                    by <a href="http://www.ritterim.com">Ritter Insurance Marketing</a>
                </p>
            </div>
        </footer>
        <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
        @RenderSection("scripts", false)
    </body>
</html>
